<div class="container">
    <div class="top" style="margin-top: 50px">
        <h1 style="font-size: 2em">Notes</h1>
    </div>
    <form id="note" action="add_note" method="post">
   {{values.title}}
        <div class="row mb-2">
            <div class="col-md-4">
                Add note title
            </div>
            <div class="col-md-8">
                <input name="title" type="text" class="form-control">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                Add note text
            </div>
            <div class="col-md-8">
                <textarea name="body" id="" rows="10" class="form-control"></textarea>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-12">
                <div class="align" align="right">
                    <input type="submit" class="btn btn-primary">
                </div>
            </div>
        </div>
    </form>
</div>
