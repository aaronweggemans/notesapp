<div class="container">
    <div class="top" style="margin-top: 50px">
        <h1 style="font-size: 2em">Edit user</h1>
    </div>
    <form id="note" action="add_user" method="post">
    {{#noop}}{{data}}{{/noop}}
    {{#each data}}
        <div class="row mb-2">
            <div class="col-md-4">
                Username
            </div>
            <div class="col-md-8">
                <input name="username" type="text" class="form-control" value="{{username}}">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                Email
            </div>
            <div class="col-md-8">
                <input name="email" type="email" class="form-control" value="{{email}}">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-12">
                <div class="align" align="right">
                    <input type="submit" class="btn btn-primary">
                </div>
            </div>
        </div>
    {{/each}}
    </form>
</div>
